<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Image Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/usercircle"
                        android:background="@drawable/circle_blue_background" />

                    <ImageView
                        android:id="@+id/btnEditImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/vector"
                        android:background="@drawable/circle_gray_background"
                        android:padding="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:focusable="true" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Form Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_background"
                android:padding="20dp">

                <!-- Nama Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Franz Herman"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp" />

                <!-- Jenis Kelamin Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="20dp" />

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Mail"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="rookie25@gmail.com"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingHorizontal="16dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="32dp" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Simpan Perubahan"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_green_background"
                    android:elevation="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Home Menu -->
            <LinearLayout
                android:id="@+id/menuHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleHome"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/home"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon (Hidden when selected) -->
                    <ImageView
                        android:id="@+id/iconHome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/home"
                        app:tint="#CCCCCC"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Ingredients Menu -->
            <LinearLayout
                android:id="@+id/menuIngredients"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleIngredients"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/stack"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconIngredients"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/stack"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Recipe Menu -->
            <LinearLayout
                android:id="@+id/menuRecipe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleRecipe"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ai"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconRecipe"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ai"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Profile Menu -->
            <LinearLayout
                android:id="@+id/menuProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/usercircle"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconProfile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/usercircle"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>