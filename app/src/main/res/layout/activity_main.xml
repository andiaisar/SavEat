<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation" />

    <!-- Bottom Navigation -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Home Menu -->
            <LinearLayout
                android:id="@+id/menuHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleHome"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/home"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon (Hidden when selected) -->
                    <ImageView
                        android:id="@+id/iconHome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/home"
                        app:tint="#CCCCCC"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Ingredients Menu -->
            <LinearLayout
                android:id="@+id/menuIngredients"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleIngredients"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/stack"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconIngredients"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/stack"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Recipe Menu -->
            <LinearLayout
                android:id="@+id/menuRecipe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleRecipe"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ai"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconRecipe"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ai"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- Profile Menu -->
            <LinearLayout
                android:id="@+id/menuProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Selected Circle Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/circleProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#4CAF50"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/usercircle"
                            app:tint="#FFFFFF"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Unselected Icon -->
                    <ImageView
                        android:id="@+id/iconProfile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/usercircle"
                        app:tint="#CCCCCC"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>