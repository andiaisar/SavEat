<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <!-- Profile Avatar -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProfile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profileuser"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notification"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"/>
            </RelativeLayout>

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tvNamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Franz Hermani!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ini ringkasan "
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:text="bahanmu &amp; resep seru hari ini"
                android:layout_marginBottom="24dp"/>

            <!-- Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search"
                        android:layout_marginEnd="12dp"
                        android:alpha="0.6"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Search"
                        android:textSize="16sp"
                        android:textColor="#999999"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ringkasan Bahan Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRingkasanBahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ringkasan"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahan Hari Ini"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <TextView
                                android:id="@+id/tvLihatDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat detail"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/vegetables"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Resep Popular Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resep Popular"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="16dp"/>

            <!-- Horizontal Scroll View for Recipe Cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/popularRecipeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe1"
                        tools:id="@+id/cardRecipe1"
                        tools:text="Loading Recipe..." />

                    <!-- Second Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe2"
                        tools:id="@+id/cardRecipe2"
                        tools:text="Loading Recipe..." />

                    <!-- Third Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe3"
                        tools:id="@+id/cardRecipe3"
                        tools:text="Loading Recipe..." />

                    <!-- Fourth Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe4"
                        tools:id="@+id/cardRecipe4"
                        tools:text="Loading Recipe..." />

                    <!-- Fifth Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe5"
                        tools:id="@+id/cardRecipe5"
                        tools:text="Loading Recipe..." />

                    <!-- Sixth Recipe Card -->
                    <include layout="@layout/item_card_recipe"
                        android:id="@+id/cardRecipe6"
                        tools:id="@+id/cardRecipe6"
                        tools:text="Loading Recipe..." />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Add bottom margin so content doesn't hide under nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>